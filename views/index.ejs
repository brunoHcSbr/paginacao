<!DOCTYPE html>
<html>
<head>
  <title>Cat√°logo de Livros</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Cat√°logo de Livros</h1>
  <table>
    <thead>
      <tr>
        <th>T√≠tulo</th>
        <th>Autor</th>
        <th>ISBN</th>
        <th>P√°ginas</th>
        <th>Ano</th>
        <th>Pre√ßo</th>
      </tr>
    </thead>
    <tbody>
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.titulo || 'N/A' %></td>
            <td><%= book.autor || 'N/A' %></td>
            <td><%= book.isbn || 'N/A' %></td>
            <td><%= book.paginas %></td>
            <td><%= book.ano %></td>
            <td>R$ <%= book.valor %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="6">Nenhum livro encontrado</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  
  <div class="livro">
    <span>Exibindo <%= totalDisplayed %> de <%= totalBooks %> livros</span>
  </div>
  
  <div class="options">
    <a href="<%= currentPage > 1 ? '?page=1' : '#' %>" class="<%= currentPage <= 1 ? '' : '' %>">Primeira</a>
    <a href="<%= currentPage > 1 ? '?page=' + (currentPage - 1) : '#' %>" class="<%= currentPage <= 1 ? '' : '' %>">ü¢Ä</a>

    <% 
      let startPage = Math.max(1, currentPage - 3);
      let endPage = Math.min(totalPages, currentPage + 3);
    %>
    
    <% for (let i = startPage; i <= endPage; i++) { %>
      <a href="?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
    <% } %>
    
    <a href="<%= currentPage < totalPages ? '?page=' + (currentPage + 1) : '#' %>" class="<%= currentPage >= totalPages ? '' : '' %>">ü¢Ç</a>
    <a href="<%= currentPage < totalPages ? '?page=' + totalPages : '#' %>" class="<%= currentPage >= totalPages ? '' : '' %>">√öltima</a>
</div>
</body>
</html>